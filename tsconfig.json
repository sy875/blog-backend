{
  "compilerOptions": {
    "module": "ES2022", // or `ESNext`
    "target": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  // "include": ["src/**/*.ts"],
  // "exclude": ["node_modules"]
  "include": ["src/**/*.ts", "express.d.ts", "src/tests"],
  "exclude": ["node_modules"]
}
